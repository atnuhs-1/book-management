{
  // ========================================
  // 基本エディタ設定
  // ========================================
  "editor.formatOnSave": true,                    // 保存時に自動フォーマット
  "editor.formatOnPaste": true,                   // ペースト時に自動フォーマット
  "editor.formatOnType": false,                   // 入力時のフォーマット（無効推奨）
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,                 // 保存時にESLint自動修正
    "source.organizeImports": true,               // import文の自動整理
    "source.removeUnusedImports": true            // 未使用import削除
  },
  "editor.tabSize": 2,                           // インデント幅
  "editor.insertSpaces": true,                   // スペースでインデント
  "editor.detectIndentation": false,             // 自動インデント検出を無効
  "editor.trimAutoWhitespace": true,             // 行末空白の自動削除
  "files.trimTrailingWhitespace": true,          // 保存時に行末空白削除
  "files.insertFinalNewline": true,              // ファイル末尾に改行追加
  "files.trimFinalNewlines": true

}
